@model Rocky.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<form method="post" asp-action="Delete">

    <div class="container">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />

        <h4 class="mb-3">Delete Product</h4>

        <p class="mb-3">Are you sure you want to DELETE the following product</p>

        <p class="display-6">
            @Model.Category.Name -> @Model.Name
        </p>

        <img class="mb-3" src="@WC.ImagePath@Model.Image" />

        <div class="mb-3">
            <input type="submit" class="btn btn-danger" value="YES, I want to DELETE the product" />
            <a class="btn btn-secondary ms-1" asp-action="Index">Back</a>
        </div>

    </div>

</form>

