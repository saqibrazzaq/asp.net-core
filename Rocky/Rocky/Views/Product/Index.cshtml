@model IEnumerable<Rocky.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">

    <div class="row mb-3">
        <div class="col-8">
            <h4>Products</h4>
        </div>
        <div class="col-4 text-end">
            <a class="btn btn-primary" asp-action="InsertUpdate">
                Add New Product
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Application Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category.Name</td>
                        <td>@product.ApplicationType.Name</td>
                        <td>
                            <a class="btn btn-sm btn-secondary" asp-action="InsertUpdate" asp-route-id="@product.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@product.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="display-6">No products found.</p>
    }

</div>

