@model Rocky.Models.ViewModels.ProductVM

@{
    var title = "Create Product";
    if (Model.Product.Id != 0)
    {
        title = "Update Product";
    }
    ViewData["Title"] = title;
}

<form method="post" enctype="multipart/form-data" asp-action="InsertUpdate">

    <div class="container">

        <h4 class="mb-3">@title</h4>

        <div class="row">
            <div class="col-8">

                <div asp-validation-summary="All" class="text-danger"></div>

                @if (Model.Product.Id != 0)
                {
                    <input type="hidden" asp-for="Product.Id" />
                    <input type="hidden" asp-for="Product.Image" />
                }

                <div class="input-group mb-3">
                    <label asp-for="Product.Name" class="input-group-text"></label>
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <label asp-for="Product.Price" class="input-group-text"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <label asp-for="Product.Description" class="input-group-text"></label>
                    <textarea asp-for="Product.Description" class="form-control" id="summernote"></textarea>
                </div>

                <div class="input-group mb-3">
                    <label asp-for="Product.Image" class="input-group-text"></label>
                    <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                </div>

                <div class="input-group mb-3">
                    <label asp-for="Product.CategoryId" class="input-group-text"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategorySelectList" class="form-select">
                        <option selected disabled>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <label asp-for="Product.ApplicationTypeId" class="input-group-text"></label>
                    <select asp-for="Product.ApplicationTypeId" asp-items="@Model.ApplicationSelectList" class="form-select">
                        <option selected disabled>-- Select Application Type --</option>
                    </select>
                    <span asp-validation-for="Product.ApplicationTypeId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    @if (Model.Product.Id == 0)
                    {
                        // Create
                        <input type="submit" onclick="return validateInput()" class="btn btn-primary" value="Create" />
                    }
                    else
                    {
                        // Update
                        <input type="submit" class="btn btn-primary" value="Update" />
                    }

                    <a class="btn btn-secondary ms-1" asp-action="Index">Back</a>
                </div>

            </div>
            <div class="col-4">
                @if (Model.Product.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Product.Image" height="300" />
                }

            </div>
        </div>

    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script language="javascript">
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 200
            });
        });

        function validateInput() {
            console.log("form submit button");
            if (document.getElementById("uploadBox").value == "") {
                swal(
                    'Error!',
                    'Please upload an Image',
                    'error'
                );
                return false;
            }
            return true;
        }
    </script>
}