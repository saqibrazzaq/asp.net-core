@model Rocky.Models.ApplicationType

@{
    ViewData["Title"] = "Edit Application Type";
}

<form method="post" asp-action="Edit">
    <div class="container">

        <div asp-validation-summary="All" class="text-danger"></div>

        <h4 class="mb-3">Edit Application Type</h4>

        <div class="mb-3 input-group">
            <label class="input-group-text" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a class="btn btn-secondary ms-1" asp-action="Index">Back</a>
        </div>

    </div>

</form>

